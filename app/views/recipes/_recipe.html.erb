
















<div class="row">
<div class="recipe-info">
<li id="recipe-<%= recipe.id %> ">
<span class="user"><%= link_to recipe.user.name, recipe.user %></span>
<span class="content">
<%= image_tag recipe.image if recipe.image.attached? %>
 <h4> <%= link_to recipe.title, recipe_path(recipe) %>


</span>
<span class="timestamp">
Posted <%= time_ago_in_words(recipe.created_at) %> ago 
<% if current_user?(recipe.user) %>
<%= link_to "delete", recipe, method: :delete, data: { confirm: "You sure?"} %>
<% end %>
</span>
</li>
</div>